    <script>
      // Fallback open-in-new-tab if embedding is blocked by CSP/X-Frame-Options
      function openDirect() {
        window.open('https://webterminal.metatrader5.com/', '_blank', 'noopener');
      }
      // On load, attempt to set src; some environments may still block framing
      document.addEventListener('DOMContentLoaded', () => {
        const iframe = document.getElementById('terminal');
        try { iframe.src = 'https://webterminal.metatrader5.com/'; }
        catch (e) { /* fallback handled by button */ }
      });
    </script>
